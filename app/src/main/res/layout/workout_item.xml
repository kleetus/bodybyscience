<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/exercise_summary_item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise: " />

        <TextView
            android:id="@+id/exercise_summary_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/weight_summary_item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight: " />

        <TextView
            android:id="@+id/weight_summary_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tul_summary_item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Under Load (ms): " />

        <TextView
            android:id="@+id/tul_summary_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>